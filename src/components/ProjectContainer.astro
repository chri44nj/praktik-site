---
const { link, img, alt } = Astro.props;
---


<section>
    <a class="order" href={link} target="_blank">
  <img src={img} alt={alt}></a>
  <slot/>
  
</section>


<style>
section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
margin-bottom: 2rem;
}

img {
    transition: 0.2s ease-in-out;
    width: 100%;
    border-radius: 10px;
      object-fit: cover; 
      aspect-ratio: 16/9;
    }

    img:hover {
      filter: brightness(0.7);
    }

   
@media only screen and (min-width: 850px) {
section {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
}

 .order {
        order: 1;
    }

}
</style>