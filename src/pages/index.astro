<style>


		.hero {
  height: 100dvh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hero-background {
	   background-image: url(/pics/PB_C1.webp); 
   background-size: cover;
  background-repeat: no-repeat;
 background-position: center center;
 position: absolute;
 top: 0;
 left: 0;
 width: 100%;
 height: 100%;
 transition: 0.5s ease-in-out;
}

.attributes {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  align-items: center;
  justify-content:center;
}

.welcome {
  text-align: center;
  background-color: var(--secondary);
  color: var(--primary);
  gap: 1rem;	
}

.skills {
	gap: 2rem;
	background-color: var(--primary);
	color: var(--secondary);
}

.skill {
	 border-radius: 10px;
	 padding: 0.25rem 0.75rem;
    background-color: var(--accent2);
	font-weight: bold;
}

.hero, .welcome, .skills, .projects, .video {
	 padding-block: 2rem;
	 padding-inline: 1rem;
}
.welcome, .skills, .projects, .video, .extra {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.projects {
background-color: var(--secondary);
color: var(--primary);

 text-align: center;
}

.projects-heading {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	text-align: center;
}



.project-wrapper {
	display: flex;
	flex-direction: column;
	gap: 0.5rem;
}

.project-wrapper p:first-of-type {
	margin-block: 0.5rem;
}

.project-tags, .extra-projects {
display: flex;
justify-content: center;
align-items: center;
 flex-wrap: wrap;
gap: 0.75rem;
}

.project-tag, .extra-project {
background-color: var(--primary);
color: var(--secondary);
 padding: 0.2rem 0.6rem;
border-radius: 10px;
font-weight: bold;
}

a.project-tag, .extra-project {
	background-color: var(--accent);
	&:hover {
		background-color: var(--accent2);
	}
}

a h2 {
	color: var(--accent);
	transition: 0.2s;
	&:hover {
		color: var(--accent2);
	}
}

.video {
background-color: var(--accent);
gap: 1rem;
}

.video-heading {
		color: var(--secondary);
		font-size: 1.5rem;
}

video {
	width: 100%;
	height: auto;
	border-radius: 10px;
	   box-shadow: 0 16px 24px rgba(0, 0, 0, 0.1), 
              0 4px 12px rgba(0, 0, 0, 0.08);
}

.extra {
	gap: 2rem;
 text-align: center;
	background-color: var(--primary);
	color: var(--secondary);
	padding-top: 2rem;
}

.breakline2 {
  height: 5px;
  width: 100%;
  background-color: var(--primary);
   margin-bottom: 2rem;
}

.bigger-heading {
	font-size: 2rem;
}

@media only screen and (min-width: 850px) {
.hero-background {
	  filter: grayscale(100%);
}
.attributes {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hero, .welcome, .skills, .projects, .video, .extra {
	 padding-inline: calc(1rem + 5dvw);
}

.welcome, .skills, .projects, .video {
	padding-block: 4rem;
}

video {
	width: 75%;
	
}

.video-heading {
	
		font-size: 3rem;
}

.extra {
	padding-bottom: 2rem;
}

.skills {
	gap: 4rem;
}

.skill {
font-size: clamp(1.5rem, 4dvw, 2rem);
}

.projects {
	gap: 2rem;
	 text-align: start;
}

.project-wrapper {

	gap: 1rem;
}

.project-wrapper p:first-of-type {
	margin-block: 0;
}

.project-tags {
justify-content: start;
}

.project-tag, .extra-project {
 padding: 0.25rem 0.75rem;
  transition: 0.2s;
}

h2 {
    font-size: clamp(2.5rem, 4dvw, 2rem);
}

.bigger-heading {
	font-size: 4rem;
}

.order {
	order: 1;
}
}


</style>
