<style>


		.hero {
  height: 100dvh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
   background-image: url(pics/PB_BW1.webp);
   background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}

.attributes {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  align-items: center;
  justify-content:center;
}

.welcome {
  text-align: center;
  background-color: var(--secondary);
  color: var(--primary);
  gap: 0.5rem;	
}

.skills {
	gap: 2rem;
	background-color: var(--primary);
	color: var(--secondary);
}

.skill {
	 border-radius: 10px;
	 padding: 0.25rem 0.75rem;
    background-color: var(--accent2);
}

.hero, .welcome, .skills, .projects {
	 padding-block: 2rem;
	 padding-inline: 1rem;
}
.welcome, .skills, .projects, .extra {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.projects {
background-color: var(--secondary);
color: var(--primary);
gap: 2rem;
 text-align: center;
}

.projects-heading {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	text-align: center;
}

.project-tags, .extra-projects {
display: flex;
justify-content: center;
align-items: center;
 flex-wrap: wrap;
gap: 0.5rem;
}

.project-tag, .extra-project {
background-color: var(--primary);
color: var(--secondary);
 padding: 0.25rem 0.75rem;
border-radius: 10px;

}

a.project-tag, .extra-project {
	background-color: var(--accent);
	&:hover {
		background-color: var(--accent2);
	}
}

a h2 {
	color: var(--accent);
	&:hover {
		color: var(--accent2);
	}
}

.extra {
	gap: 2rem;
 text-align: center;
	background-color: var(--primary);
	color: var(--secondary);
	padding-top: 2rem;
}

.breakline2 {
  height: 5px;
  width: 100%;
  background-color: var(--primary);
   margin-bottom: 2rem;
}

@media only screen and (min-width: 850px) {

.attributes {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hero, .welcome, .skills, .projects, .extra {
	 padding-inline: calc(1rem + 5dvw);
}

.welcome, .skills, .projects {
	padding-block: 4rem;
}

.extra {
	padding-bottom: 2rem;
}

.skills {
	gap: 4rem;
}

.skill {
font-size: clamp(1.5rem, 4dvw, 2rem);
}

.projects {
	gap: 4rem;
	 text-align: start;
}

.project-tags {
justify-content: start;
}

h2 {
    font-size: clamp(2.5rem, 4dvw, 2rem);
}

.order {
	order: 1;
}
}


</style>
